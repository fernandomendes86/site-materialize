<%#= render 'shared/message_center' %>
<div class="container">
  <div class="center-align">
    <p>
      <%= avatar_image(@user) %><br>
      <h5><%= @user.username.capitalize %>'s profile</h5>
      <span>
        <% if loggined_in? && (@user == current_user || current_user.admin?) %>
          <%= link_to edit_user_path(@user), class: "waves-effect waves-light btn-small" do %>
            <i class="material-icons">edit</i>
          <% end %>
          <%= link_to user_path(@user), class: "waves-effect waves-light btn-small red", method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="tiny material-icons">delete</i>
          <% end %>
        <% end %>
      </span>
    </p> 
    <h3>Articles</h3>
    <%= render 'articles/article' %>
  </div>
</div>
<center>
  <%= paginate @articles %>
</center>