<br>
<div class="container">
  <div class="row">
    <br>
    <div class="col s12 m10 offset-m1">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Category: <%= @category.name %></span>
          <hr>
          <%= image_tag "/uploads/ruby-logo.png" %>
        </div>
        <div class="card-action center-align grey lighten-4">
          <% if loggined_in? && current_user.admin? %>
            <%= link_to edit_category_path(@category), class: "waves-effect waves-light btn" do %>
              <i class="material-icons">edit</i>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <hr>
  <center>
    <h3>Articles</h3>
  </center>
  <hr>
  <%= render 'articles/article' %>              
</div>
<br>