<div class="container">
  <div class="row">
    <br>
    <div class="col s12 m10 offset-m1">
      <div class="card">
        <div class="card-content">
          <span class="card-title"><%= @category.name %></span>
          <%= image_tag "/uploads/ruby-logo.png" %>
        </div>
        <div class="card-action center-align grey lighten-4">
          <% if loggined_in? && (@category.user == current_user || current_user.admin?) %>
            <%= link_to edit_category_path(@category), class: "waves-effect waves-light btn" do %>
              <i class="material-icons">edit</i>
            <% end %>
            <%= link_to @category, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn red" do %>
              <i class="material-icons">delete</i> 
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>              
</div>
<br>