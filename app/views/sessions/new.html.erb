<div class="container">
  <div class="row">
    <div class="col s12 m7 offset-m3 ">
      <div class="card-panel">
        <h4 class="center-align">Login</h4>
        <div class="container-center">
          <%= form_with(scope: :session, url: login_path) do |form| %>
            <%= render 'shared/message_success' %>
            <%#= render 'shared/errors', errors: @user.errors %>
            <div class="row">
              <div class="input-field col s12">
                <%= form.label :username, class: "validate" %>
                <%= form.text_field :username, class: "validate" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <%= form.label :password, class: "validate" %>
                <%= form.password_field :password, class: "validate" %>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 center">
                <%#= form.submit "#{button_name}", class: "waves-effect waves-light btn green" %>
                <button type="submit" class="waves-effect waves-light btn green">Login</button>
              </div>
            </div>      
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


     
<script>
  $(document).ready(function() {
    M.updateTextFields();
  });
</script>