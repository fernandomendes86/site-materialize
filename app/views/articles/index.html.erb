<p id="notice" class="green-text green-darken-2"><%= notice %></p>

<h1 class="center-align">List of Articles</h1>
<div id="new-article" class="center-align">
<%= link_to new_article_path, class: "btn-floating btn-large waves-effect waves-light green" do %>
  <i class="material-icons">add</i>
<% end %>
</div>
<br />
<div class="container">
  <% @articles.each do |article| %>  
    <div class="row">
      <div class="col s12 m6 offset-m3">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= article.title %></span>
            <p><%= article.description %></p>
          </div>
          <div class="card-action center-align grey lighten-4">
            <%= link_to edit_article_path(article), class: "waves-effect waves-light btn" do %>
              <i class="material-icons">edit</i>
            <% end %>
            <%= link_to article, method: :delete, data: { confirm: 'Are you sure?' }, class: "waves-effect waves-light btn red" do %>
              <i class="material-icons">delete</i> 
            <% end %>
          </div>
        </div>
      </div>
    </div>              
  <% end %>
</div>
<br>