<%= form_with(model: article) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
        <% article.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="input-field col s6">
      <%= form.label :title, class: "validate" %>
      <%= form.text_field :title, class: "validate" %>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <%= form.label :description, class: "validate" %>
      <%= form.text_field :description, class: "validate" %>
    </div>
  </div>
  <div class="row">
    <div class="input-field col s6">
    <%#= form.submit %>
    <%= link_to 'Back', articles_path, class: "waves-effect waves-light btn" %>
    <button type="submit" class="waves-effect waves-light btn green">Salvar</button>
    </div>
  </div>      
  
<% end %>
